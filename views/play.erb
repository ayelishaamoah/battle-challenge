<div>
  <%if @game.current_player.hit_points == 0 %>
  <h2> <%=@game.current_player.name %> Loses!</h2>
  <% else %>
  <h1> <%= @game.player_one.name %> vs <%=@game.player_two.name %> </h1>
  <h2> <%= @game.current_player.name %>'s turn </h2>
  <h3> <%= @game.player_one.name%>: <%=@game.player_one.hit_points%> XP</h3>
  <h3> <%= @game.player_two.name%>: <%=@game.player_two.hit_points%> XP</h3>
  <form action="/attack">
    <input type="submit" value="Attack">
  </form>
  <% end %>
</div
