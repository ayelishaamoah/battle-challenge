<% if @game.current_player == @game.player_one %>
  <h2><%= @game.player_one.name %> attacked <%=@game.player_two.name%></h2>
<% else %>
  <h2><%= @game.player_two.name %> attacked <%=@game.player_one.name%></h2>
<% end %>
<form action="/switch_turns" method="post">
  <input type="submit" value="Play again">
</form>
